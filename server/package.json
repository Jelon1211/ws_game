{
  "name": "server",
  "version": "1.0.0",
  "description": "Game server with Colyseus, Socket.IO, Express, TypeScript, Sentry monitoring",
  "main": "build/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "NODE_ENV=production node build/index.js",
    "build": "rm -rf build && tsc",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@colyseus/schema": "^3.0.60",
    "@colyseus/tools": "^0.16.13",
    "@sentry/node": "^7.116.0",
    "@sentry/tracing": "^7.116.0",
    "colyseus": "^0.16.4",
    "cors": "^2.8.5",
    "debug": "^4.3.6",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/node": "^20.14.10",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "license": "MIT"
}
